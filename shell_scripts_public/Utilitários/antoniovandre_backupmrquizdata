#!/bin/bash

# Proprietário: Antonio Vandré Pedrosa Furtunato Gomes.

# Script de backup do MR Quiz data.

# Última atualização: 13-10-2024. Não considerando alterações em variáveis globais.

if ! [ -n "$AVENV" ]; then echo -ne "Carregando variáveis de ambiente... "; if ! source "${HOME}/shell_scripts/Utilitários/antoniovandre_env" &>> /dev/null; then echo -e "Ocorreu um erro.\n"; else echo -e "${AV_VERDE}Ok${AV_SEMCOR}.\n"; fi; fi

if ! [ -n "$AVCORES" ]; then echo -ne "Carregando antoniovandre_cores... "; if ! source "${BASHSCRIPTS}antoniovandre_cores" &>> /dev/null; then echo -e "Ocorreu um erro.\n"; else echo -e "${AV_VERDE}Ok${AV_SEMCOR}.\n"; fi; fi

if ! antoniovandre_verificarinternet_1 &>> /dev/null; then echo -e "${AV_VERMELHO}Sem conexão com a internet${AV_SEMCOR}."; exit 1; fi

if ! hash dbxcli-linux-amd64; then echo -e "${AV_VERMELHO}Software \"dbxcli-linux-amd64\" não encontrado${AV_SEMCOR}."; exit 1; fi

if [ "${1}" != "f" ]; then

dbxcli-linux-amd64 get "/Legado ontológico/Mathematical Ramblings quiz data.txt" "${HOME}/Documentos/Mathematical Ramblings quiz data.txt.tmp"

if ! ls -al "${HOME}/Documentos/Mathematical Ramblings quiz data.txt" &>> /dev/null; then cp "${HOME}/Documentos/Mathematical Ramblings quiz data.txt.tmp" "${HOME}/Documentos/Mathematical Ramblings quiz data.txt"; else if [[ $(ls -al "${HOME}/Documentos/Mathematical Ramblings quiz data.txt.tmp" | cut -d ' ' -f 5 | tr -d '\n') -gt $(ls -al "${HOME}/Documentos/Mathematical Ramblings quiz data.txt" | cut -d ' ' -f 5 | tr -d '\n') ]]; then cp "${HOME}/Documentos/Mathematical Ramblings quiz data.txt" "${HOME}/Documentos/Mathematical Ramblings quiz data.txt.bak"; cp "${HOME}/Documentos/Mathematical Ramblings quiz data.txt.tmp" "${HOME}/Documentos/Mathematical Ramblings quiz data.txt"; else if [[ $(ls -al "${HOME}/Documentos/Mathematical Ramblings quiz data.txt.tmp" | cut -d ' ' -f 5 | tr -d '\n') != $(ls -al "${HOME}/Documentos/Mathematical Ramblings quiz data.txt" | cut -d ' ' -f 5 | tr -d '\n') ]]; then dbxcli-linux-amd64 put "${HOME}/Documentos/Mathematical Ramblings quiz data.txt" "/Legado ontológico/Mathematical Ramblings quiz data.txt"; dbxcli-linux-amd64 put "${HOME}/Documentos/Mathematical Ramblings quiz data.txt" "/Documents/BACKUPED14/Mathematical Ramblings quiz data.txt"; fi; fi; fi

else

if ls -al "${HOME}/Documentos/Mathematical Ramblings quiz data.txt" &>> /dev/null; then dbxcli-linux-amd64 put "${HOME}/Documentos/Mathematical Ramblings quiz data.txt" "/Legado ontológico/Mathematical Ramblings quiz data.txt"; dbxcli-linux-amd64 put "${HOME}/Documentos/Mathematical Ramblings quiz data.txt" "/Documents/BACKUPED14/Mathematical Ramblings quiz data.txt"; else echo -e "${AV_VERMELHO}Mathematical Ramblings quiz data.txt não encontrado${AV_SEMCOR}."; fi

fi
